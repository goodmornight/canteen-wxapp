/* miniprogram/pages/confirmOrder/confirmOrder.wxss */
@import "../../app.wxss";
page{
  background-color: #e7ebed;
}
/*下面订单栏的高度*/
.submit-bar-class{
  height: 125rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.cart-btn{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  font-size: 40rpx;
}
.cart-btn text{
  font-size: 20rpx;
}
/* 商品栏标题的字体大小 */
.card-title-class{
  font-size: 32rpx;
  margin-top: 20rpx;
}
/* 商品栏价格的大小 */
.card-price-class{
  font-size: 32rpx!important;
}
.card-num-class{
  font-weight: bold;
  font-size: 32rpx!important;
  bottom: 20rpx;
}
.red{
  font-size: 20px;
  /* font-weight: bold; */
  color:  #ee0a24;
}
.card-con{
  background-color: #fafafa;
  padding:10rpx 0;
}
.btn-green{
  background-color: #5A9367;
  color:#fff;
}