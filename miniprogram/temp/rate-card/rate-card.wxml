				<view class="top-left">
					<image class="cu-avatar radius lg" mode="aspectFill" src="../../images/test.jpg"></image>
				</view>
				<view class="top-right">
					<text>{{item.name}}</text>
					<van-rate name="rate" data-idx1="{{idx1}}" data-idx2="{{idx2}}" value="{{ item.rate }}" bind:change="onStarChange" />
				</view>
